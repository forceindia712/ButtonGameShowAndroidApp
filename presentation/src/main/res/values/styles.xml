<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App Name -->
    <style name="AppName" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/inter_extrabold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Standard" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Name" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Default app button -->
    <style name="ButtonGreen" parent="@android:style/Widget.Button">
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background" >@drawable/button_ripple</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:height">48dp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/MyPositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/MyNegativeButtonStyle</item>
    </style>

    <style name="MyPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="MyNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>


</resources>